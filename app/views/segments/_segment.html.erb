<% @segments.each do |segment| %>
  <tr>
    <td><%= segment.name %></td>
    <td><%= link_to 'Show', segment %></td>
    <td><%= link_to 'Edit', edit_segment_path(segment) %></td>
    <td><%= link_to 'Destroy', "javascript:void(0);", :class => "deletelink",data: {id: segment.id } %></td>
  </tr>
<% end %>