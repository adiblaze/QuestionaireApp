<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "Questionaire-App", "#" , id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Home", root_path %></li>

        <% if user.has_role? :admin %>
          <li><%= link_to "Manage Exam", exams_path %></li>
          <li><%= link_to current_admin.email %></li>
          <li><%= link_to "Logout",destroy_admin_session_path, method: :delete %></li>
        <% elsif user.has_role? :user %>
          <li><%= link_to current_user.email, edit_user_registration_path %></li>
          <li><%= link_to "Logout",destroy_user_session_path, method: :delete %></li>
        <% else %>
          <li><%= link_to "Log In", new_user_session_path %></li>
          <li><%= link_to "Sign Up", new_user_registration_path %></li>
          <li><%= link_to "Log In as Admin", new_admin_session_path %></li>
        <% end %>

      </ul>
    </nav>
  </div>
</header>
